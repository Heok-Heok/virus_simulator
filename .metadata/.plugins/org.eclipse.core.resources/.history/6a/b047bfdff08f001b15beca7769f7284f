import java.awt.*;
import javax.swing.*;
import java.util.Random;
import java.lang.Math;
import java.lang.Thread;;

class MyComponent extends JComponent
{
	private Person[] agents;
	
	public MyComponent() {
		 Random rnd = new Random();
		 double pi = Math.PI;
		 int distance;
		 int center_x = 300;
		 int center_y = 300;
		 
		 //Person[] agents;
		 agents = new Person[1000];
		 for (int i =0; i<agents.length;i++) {
			 distance = rnd.nextInt(200);
			 agents[i] = new Person((int)(distance*Math.cos(2*pi/agents.length*i))+center_x,(int)(distance*Math.sin(2*pi/agents.length*i))+center_y);
			 //g.fillOval(agents[i].getX(), agents[i].getY(), 7, 7);
		 }
	}

public void paint(Graphics g)
 {
	  //g.drawLine(100, 100, 400, 300);
	  //g.drawLine(400, 300, 200, 300);
	  /*
	  int y1 = 50;
	  int y2 = 450;
	  int x1, x2;
	  int step = 50;
	  for(x1 = 50; x1<500; x1=x1 + step)
	  {
	   for(x2 = 450; x2>0; x2 = x2 - step)
	   {
	    g.drawLine(x1, y1  , x2, y2);
	    g.drawLine(y1, x1  , y2, x2);
	    
	   }
	  }
	  */
		 //g.fillOval(100,100, 10, 10);
	 for (int i =0; i<agents.length;i++) {
		 g.fillOval(agents[i].getX(), agents[i].getY(), 7, 7);
	 }
	 
 }
 public void moveDots() {
	 for (int i=0; i<agents.length;i++) {
		 agents[i].randomMove();
	 }
	 repaint();
 }
}

class Java2D extends JFrame
{
 public Java2D()
 {
  this.setTitle("Java 2D");
  this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
  this.setSize(1000, 1200);
  
  this.setVisible(true);
  
  MyComponent mc = new MyComponent();
  this.add(mc);
  
  for (int i=0; i<1000; i++) {
	  mc.moveDots();
	  try {
		Thread.sleep(1000);
	} catch (InterruptedException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
  }
 }
}

public class Main {
 public static void main(String[] args) {
  Java2D jFrame = new Java2D();

 }

} 