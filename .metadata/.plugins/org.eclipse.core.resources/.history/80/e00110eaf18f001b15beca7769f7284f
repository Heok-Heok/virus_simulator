import java.util.Random;;

public class Person {
	private int px;
	private int py;
	private int status;
	
	public Person() {
		this.px = 0;
		this.py = 0;
		this.status = 1;
	}
	public Person(int x, int y) {
		this.px = x;
		this.py = y;
		this.status = 1;
	}
	
	public int getX() {
		return this.px;
	}
	public int getY() {
		return this.py;
	}
	
	public void randomMove() {		// 무작위 움직임
		Random rnd = new Random();
		switch (rnd.nextInt(4)) {
		case 0:
			this.px += 3;
			break;
		case 1:
			this.px -= 3;
			break;
		case 2:
			this.py += 3;
			break;
		case 3:
			this.py -= 3;
			break;
		}
	}
}
